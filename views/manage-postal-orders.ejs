<a href="/manage-orders">
    <img class="back" src="/back-button.png" alt="back">
</a>
<link rel="stylesheet" href="/styles.css">
<h2 class="text-title">Manage Postal Orders</h2>
<div class="button-group">

    <a href="/add-postal-order" class="btn btn-warning">Add New Postal Order</a>
</div>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Parcel ID</th>
            <th>Total Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% if (postalOrders && postalOrders.length > 0) { %>
            <% postalOrders.forEach(order => { %>
                <tr>
                    <td><%= order.order_id %></td>
                    <td><%= order.parcel_id %></td>
                    <td><%= order.total_price %></td>
                    <td>
                        <a href="/update-postal-order/<%= order.parcel_id %>" class="btn btn-info">Update</a> 
                        <form action="/delete-postal-order/<%= order.parcel_id %>" method="POST" style="display:inline;">
                            <button type="submit" onclick="return confirm('Are you sure you want to remove this postal order?')" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="5">No postal orders available.</td>
            </tr>
        <% } %>
    </tbody>
</table>
