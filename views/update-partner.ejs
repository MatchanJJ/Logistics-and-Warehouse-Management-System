<body>
    <a href="/manage-partner">
        <img class="back" src="/back-button.png" alt="back">
    </a>
    <div class="form-container">
        <!-- Back Button -->

        <!-- Page Header -->
        <h2 class="text-white">Update Logistics Partner</h2>

        <!-- Update Partner Form -->
        <form action="/update-partner/<%= partner.carrier_id %>" method="POST" class="mb-3">
            <!-- Carrier Name -->
            <div class="mb-3">
                <label for="carrier_name" class="form-label text-white">Carrier Name:</label>
                <input type="text" id="carrier_name" name="carrier_name" value="<%= partner.carrier_name %>" required class="form-control">
            </div>

            <!-- Shipping Service ID -->
            <div class="mb-3">
                <label for="shipping_service_id" class="form-label text-white">Shipping Service ID:</label>
                <input type="text" id="shipping_service_id" name="shipping_service_id" value="<%= partner.shipping_service_id %>" required class="form-control">
            </div>

            <!-- Contact Info -->
            <div class="mb-3">
                <label for="carrier_contact_info" class="form-label text-white">Contact Info:</label>
                <input type="text" id="carrier_contact_info" name="carrier_contact_info" value="<%= partner.carrier_contact_info %>" required class="form-control">
            </div>

            <!-- Button Group -->
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Update Partner</button>
            </div>
        </form>
    </div>

    <!-- Adding styles for text color -->
    <style>
        .text-white {
            color: white;
        }

        .container {
            max-width: 600px;
        }

        .form-label {
            font-weight: bold;
        }

        .form-control {
            background-color: #343a40;
            color: white;
            border: 1px solid #ced4da;
        }

        .form-control:focus {
            background-color: #343a40;
            color: white;
        }
    </style>
</body>
