<link rel="stylesheet" href="/styles.css">
<body>
    <div class="container">
        <h2>Manage Return Status</h2>
    <a href="/add-return-status" class="btn">Add New Return Status</a>
    <table class="responsive-table">
        <thead>
            <tr>
                <th>Status ID</th>
                <th>Status Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (returnStatuses && returnStatuses.length > 0) { %>
                <% returnStatuses.forEach(status => { %>
                    <tr>
                        <td><%= status.return_status_id %></td>
                        <td><%= status.return_status_name %></td>
                        <td>
                            <a href="/update-return-status/<%= status.return_status_id %>"><button>Update</button></a> 
                            <form action="/delete-return-status/<%= status.return_status_id %>" method="POST" style="display:inline;">
                                <button type="submit" onclick="return confirm('Are you sure you want to remove this return status?')"  >Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="3">No return statuses found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
    </div>
</body>
</html>
