<a href="/edit-parcel-prompt/<%= parcel.parcel_id %>">
    <img class="back" src="/back-button.png" alt="back">
</a>


<div class="form-container">
    <h2 class="text-white">Update Parcel Stock Quantity</h2>
    <form action="/update-parcel-stock-quantity/<%= parcel.parcel_id %>" method="POST">


        <!-- New Stock Quantity -->
        <div class="mb-3">
            <label for="new_quantity" class="form-label text-white">New Stock Quantity:</label>
            <input type="number" id="new_quantity" name="new_quantity" class="form-control" required>
        </div>

        <!-- Submit Button -->
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Update Stock Quantity</button>
        </div>
    </form>
</div>
