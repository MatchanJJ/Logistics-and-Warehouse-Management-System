<h2>Update Warehouse</h2>
<link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS file -->

<div class="form-container">
    

    <form action="/update-warehouse/<%= warehouse.warehouse_id %>" method="POST" class="form">
        <div class="form-group">
            <label for="warehouse_address">Location:</label>
            <input type="text" id="warehouse_address" name="warehouse_address" value="<%= warehouse.warehouse_address %>" required class="form-control">
        </div>
        
        <div class="form-group">
            <label for="capacity">Capacity:</label>
            <input type="number" id="capacity" name="capacity" value="<%= warehouse.capacity %>" required class="form-control">
        </div>
        
        <div class="form-group">
            <label for="warehouse_type_id">Warehouse Type ID:</label>
            <input type="text" id="warehouse_type_id" name="warehouse_type_id" value="<%= warehouse.warehouse_type_id %>" required class="form-control">
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Update Warehouse</button>
            <a href="/warehouses" class="btn btn-secondary">Back to Warehouse List</a>
        </div>
    </form>
</div>
