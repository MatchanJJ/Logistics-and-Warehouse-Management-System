<h2>Update Warehouse</h2>

<div>
    <a href="/warehouses" class="btn">Back to Warehouse List</a>
</div>

<form action="/update-warehouse/<%= warehouse.id %>" method="POST">
    <label for="warehouse_address">Location:</label>
    <input type="text" id="warehouse_address" name="warehouse_address" value="<%= warehouse.location %>" required>
    <br>
    
    <label for="capacity">Capacity:</label>
    <input type="number" id="capacity" name="capacity" value="<%= warehouse.capacity %>" required>
    <br>
    
    <label for="warehouse_type_id">Warehouse Type ID:</label>
    <input type="text" id="warehouse_type_id" name="warehouse_type_id" value="<%= warehouse.warehouse_type_id %>" required>
    <br>
    
    <button type="submit" class="btn">Update Warehouse</button>
</form>
