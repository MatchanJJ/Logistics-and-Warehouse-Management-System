
<body>

    <a href="/orders" class="btn ">
        <img class="back" src="/back-button.png" alt="back" class="back-button"> 
    </a>

    <div class="form-container">
        <h2 class="text-white">Add New Order</h2>

        <form action="/add-orders" method="POST" class="mt-3 p-4 border rounded ">
            <div class="form-group">
                <label for="customer_id">Customer ID:</label>
                <input type="text" id="customer_id" name="customer_id" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="shipping_service_id">Shipping Service:</label>
                <select id="shipping_service_id" name="shipping_service_id" class="form-control" required>
                    <option value="">Select Shipping Service</option>
                    <% shippingServices.forEach(function(service) { %>
                        <option value="<%= service.shipping_service_id %>">
                            <%= service.shipping_service_name %>
                        </option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="shipping_address">Shipping Address:</label>
                <input type="text" id="shipping_address" name="shipping_address" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="shipping_receiver">Shipping Receiver:</label>
                <input type="text" id="shipping_receiver" name="shipping_receiver" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-primary">Add Order</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
