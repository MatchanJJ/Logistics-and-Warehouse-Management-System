            <th>Fragile</th>
            <th>Perishable</th>
            <th>Hazardous</th>
            <th>Oversized</th>
            <th>Returnable</th>
            <th>Temperature Sensitive</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach(product => { %>
        <tr>
            <td><%= product.product_id %></td>
