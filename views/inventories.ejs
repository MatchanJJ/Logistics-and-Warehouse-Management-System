            <td><%= product.product_unit_price %></td>
            <td><%= product.product_weight %></td>
            <td><%= product.product_length %></td>
            <td><%= product.product_width %></td>
            <td><%= product.product_height %></td>
            <td><%= product.is_fragile ? 'Yes' : 'No' %></td>
            <td><%= product.is_perishable ? 'Yes' : 'No' %></td>
            <td><%= product.is_hazardous ? 'Yes' : 'No' %></td>
