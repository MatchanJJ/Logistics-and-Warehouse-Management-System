<body>
    <a href="/returns">
        <img class="back" src="/back-button.png" alt="back">
    </a>

    <div class="container text-white"> <!-- Added 'text-white' for white text -->
        <h1>Return Details</h1>

        <% if (returnDetails) { %> 
            <table class="return-details-table table table-dark"> <!-- Bootstrap dark table for contrast -->
                <tr>
                    <th>Return ID:</th>
                    <td><%= returnDetails.return_id %></td>
                </tr>
                <tr>
                    <th>Order ID:</th>
                    <td><%= returnDetails.order_id %></td>
                </tr>
                <tr>
                    <th>Return Reason:</th>
                    <td><%= returnDetails.return_reason %></td>
                </tr>
                <tr>
                    <th>Return Date:</th>
                    <td><%= returnDetails.return_date %></td>
                </tr>
                <tr>
                    <th>Return Status:</th>
                    <td><%= returnDetails.return_status_id %></td>
                </tr>
            </table>
        <% } else { %>
            <p>No return found with the provided ID.</p>
        <% } %>
    </div>

    <!-- Optional: Include Bootstrap JS and CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</body>
</html>
