<link rel="stylesheet" href="/styles.css">
<body>
    <div class="container">
        <h2>Manage Parcel Categories</h2>
        <div class="button-group">
            <a href="/add-parcel-category" class="btn btn-warning">Add New Parcel Category</a>

        </div>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Parcel Category ID</th>
                <th>Parcel Category Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (parcelCategories && parcelCategories.length > 0) { %>
                <% parcelCategories.forEach(category => { %>
                    <tr>
                        <td><%= category.parcel_category_id %></td>
                        <td><%= category.parcel_category_name %></td>
                        <td>
                            <a href="/update-parcel-category/<%= category.parcel_category_id %>" class="btn btn-info">Update</a> 
                            <form action="/delete-parcel-category/<%= category.parcel_category_id %>" method="POST" style="display:inline;">
                                <button type="submit" onclick="return confirm('Are you sure you want to remove this parcel categogry?')" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="3">No parcel categories available.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
    </div>
</body>
