<a href="/employees">
    <img class="back" src="/back-button.png" alt="back">
</a>
<h2>Update Employee</h2>
<link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS file -->

<div class="form-wrapper">
    <form action="/update-employee/<%= employee.employee_id %>" method="POST" class="form-container">
        <!-- First Name -->
        <div class="form-group">
            <label for="employee_first_name">First Name:</label>
            <input type="text" id="employee_first_name" name="employee_first_name" value="<%= employee.employee_first_name %>" required>
        </div>

        <!-- Last Name -->
        <div class="form-group">
            <label for="employee_last_name">Last Name:</label>
            <input type="text" id="employee_last_name" name="employee_last_name" value="<%= employee.employee_last_name %>">
        </div>

        <!-- Contact Info -->
        <div class="form-group">
            <label for="contact_info">Contact Info:</label>
            <input type="text" id="contact_info" name="contact_info" value="<%= employee.contact_info %>">
        </div>

        <!-- Role ID -->
        <div class="form-group">
            <label for="employee_role_id">Role ID:</label>
            <input type="text" id="employee_role_id" name="employee_role_id" value="<%= employee.employee_role_id %>">
        </div>

        <!-- Salary -->
        <div class="form-group">
            <label for="employee_salary">Salary:</label>
            <input type="number" step="0.01" id="employee_salary" name="employee_salary" value="<%= employee.employee_salary %>">
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <button type="submit" class="btn">Update Employee</button>
        </div>
    </form>
</div>
