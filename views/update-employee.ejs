
<body>
    <a href="/employees" class="btn">
        <img class="back" src="/back-button.png" alt="back">
    </a>
    
    <div class="form-container">
        <h2 class="text-white">Update Employee</h2>
        
        <div class="form-wrapper">
            <form action="/update-employee/<%= employee.employee_id %>" method="POST" class="form-container">
                <!-- First Name -->
                <div class="mb-3">
                    <label for="employee_first_name" class="form-label text-white">First Name:</label>
                    <input type="text" id="employee_first_name" name="employee_first_name" class="form-control" value="<%= employee.employee_first_name %>" required>
                </div>

                <!-- Last Name -->
                <div class="mb-3">
                    <label for="employee_last_name" class="form-label text-white">Last Name:</label>
                    <input type="text" id="employee_last_name" name="employee_last_name" class="form-control" value="<%= employee.employee_last_name %>">
                </div>

                <!-- Contact Info -->
                <div class="mb-3">
                    <label for="contact_info" class="form-label text-white">Contact Info:</label>
                    <input type="text" id="contact_info" name="contact_info" class="form-control" value="<%= employee.contact_info %>">
                </div>

                <!-- Role ID (Dropdown) -->
                <div class="mb-3">
                    <label for="employee_role_id" class="form-label text-white">Role:</label>
                    <select id="employee_role_id" name="employee_role_id" class="form-select" required>
                        <option value="">Select Role</option>
                        <% jobRoles.forEach(function(role) { %>
                            <option value="<%= role.employee_role_id %>" <%= employee.employee_role_id === role.employee_role_id ? 'selected' : '' %> >
                                <%= role.role_name %>
                            </option>
                        <% }); %>
                    </select>
                </div>

                <!-- Salary -->
                <div class="mb-3">
                    <label for="employee_salary" class="form-label text-white">Salary:</label>
                    <input type="number" step="0.01" id="employee_salary" name="employee_salary" class="form-control" value="<%= employee.employee_salary %>">
                </div>

                <!-- Submit Button -->
                <div>
                    <button type="submit" class="btn btn-primary">Update Employee</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
