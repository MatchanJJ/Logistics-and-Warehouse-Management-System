<a href="/">
    <img class="home" src="/home-button.png" alt="home">
</a>
<a href="/employee-logs">
    <img class="home" src="/log.png" alt="log">
</a>
<a href="/employee-archives">
    <img class="home" src="/inbox.png" alt="archives">
</a>

<div class="flexer">

    <h2 class="text-title">Employee List</h2>
</div>
<div class="button-group">
    <a href="/add-employee" class="btn btn-warning">Add New Employee</a>
    <a href="/manage-job-roles" class="btn btn-warning">Manage Job Role</a>
</div>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Full Name</th>
            <th>Contact Info</th>
            <th>Role</th>
            <th>Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% employees.forEach(employee => { %>
        <tr onclick="window.location.href='/employee/<%= employee.employee_id %>'" style="cursor: pointer;">
            <td><%= employee.employee_id %></td>
            <td><%= employee.employee_name %></td>
            <td><%= employee.contact_info %></td>
            <td><%= employee.role %></td>
            <td><%= employee.salary %></td>
            <td>
                <a href="/update-employee/<%= employee.employee_id %>" class="btn btn-info">Update</a> 
                <a href="/assign-employee/<%= employee.employee_id %>" class="btn btn-primary">Assign</a> 
                <form action="/unassign-employee/<%= employee.employee_id %>" method="POST" style="display:inline;">
                    <button type="submit" onclick="return confirm('Are you sure you want to unassign this employee?')" class="btn btn-secondary">Unassign</button>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
