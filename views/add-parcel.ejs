<a href="/parcel">
    <img class="back" src="/back-button.png" alt="back">
</a>
<link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS file -->

<body>
    <div class="form-wrapper">
        <h2>Add Parcel</h2>
        <form action="/add-parcel" method="POST" class="form-container">
            <div class="form-group">
                <label for="parcel_id">Parcel ID:</label>
                <input type="text" id="parcel_id" name="parcel_id" required>
            </div>

            <div class="form-group">
                <label for="parcel_category_id">Parcel Category ID:</label>
                <input type="text" id="parcel_category_id" name="parcel_category_id" required>
            </div>

            <div class="form-group">
                <label for="parcel_description">Parcel Description:</label>
                <textarea id="parcel_description" name="parcel_description" required></textarea>
            </div>

            <div class="form-group">
                <label for="parcel_unit_price">Parcel Unit Price:</label>
                <input type="number" id="parcel_unit_price" name="parcel_unit_price" step="0.01" required>
            </div>

            <div class="form-group">
                <label for="parcel_weight">Parcel Weight:</label>
                <input type="number" id="parcel_weight" name="parcel_weight" required>
            </div>

            <div class="form-group">
                <label for="parcel_length">Parcel Length:</label>
                <input type="number" id="parcel_length" name="parcel_length" required>
            </div>

            <div class="form-group">
                <label for="parcel_width">Parcel Width:</label>
                <input type="number" id="parcel_width" name="parcel_width" required>
            </div>

            <div class="form-group">
                <label for="parcel_height">Parcel Height:</label>
                <input type="number" id="parcel_height" name="parcel_height" required>
            </div>

            <div class="form-group">
                <label for="is_fragile">Fragile:</label>
                <input type="checkbox" id="is_fragile" name="is_fragile">
            </div>

            <div class="form-group">
                <label for="is_perishable">Perishable:</label>
                <input type="checkbox" id="is_perishable" name="is_perishable">
            </div>

            <div class="form-group">
                <label for="is_hazardous">Hazardous:</label>
                <input type="checkbox" id="is_hazardous" name="is_hazardous">
            </div>

            <div class="form-group">
                <label for="is_oversized">Oversized:</label>
                <input type="checkbox" id="is_oversized" name="is_oversized">
            </div>

            <div class="form-group">
                <label for="is_returnable">Returnable:</label>
                <input type="checkbox" id="is_returnable" name="is_returnable">
            </div>

            <div class="form-group">
                <label for="is_temperature_sensitive">Temperature Sensitive:</label>
                <input type="checkbox" id="is_temperature_sensitive" name="is_temperature_sensitive">
            </div>

            <div class="form-group">
                <button type="submit" class="btn">Add Parcel</button>
            </div>
        </form>
    </div>
</body>
</html>
