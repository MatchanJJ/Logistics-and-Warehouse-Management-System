<a href="/parcel">
    <img class="back" src="/back-button.png" alt="back">
</a>
<link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS file -->

<body>
    <div class="form-container">
        <h2 class="text-white">Add Parcel</h2>

        <form action="/add-parcel" method="POST">
            
            <!-- Parcel Category as Dropdown -->
            <div class="mb-3">
                <label for="parcel_category_id" class="form-label text-white">Parcel Category:</label>
                <select id="parcel_category_id" name="parcel_category_id" class="form-control" required>
                    <option value="">Select Parcel Category</option>
                    <% parcelCategories.forEach(function(category) { %>
                        <option value="<%= category.parcel_category_id %>">
                            <%= category.parcel_category_name %>
                        </option>
                    <% }); %>
                </select>
            </div>

            <!-- Parcel Description -->
            <div class="mb-3">
                <label for="parcel_description" class="form-label text-white">Parcel Description:</label>
                <textarea id="parcel_description" name="parcel_description" class="form-control" required></textarea>
            </div>

            <!-- Parcel Unit Price -->
            <div class="mb-3">
                <label for="parcel_unit_price" class="form-label text-white">Parcel Unit Price:</label>
                <input type="number" id="parcel_unit_price" name="parcel_unit_price" class="form-control" step="0.01" required>
            </div>

            <!-- Parcel Weight -->
            <div class="mb-3">
                <label for="parcel_weight" class="form-label text-white">Parcel Weight:</label>
                <input type="number" id="parcel_weight" step="0.01" name="parcel_weight" class="form-control" required>
            </div>

            <!-- Parcel Length -->
            <div class="mb-3">
                <label for="parcel_length" class="form-label text-white">Parcel Length:</label>
                <input type="number" id="parcel_length" step="0.01" name="parcel_length" class="form-control" required>
            </div>

            <!-- Parcel Width -->
            <div class="mb-3">
                <label for="parcel_width" class="form-label text-white">Parcel Width:</label>
                <input type="number" id="parcel_width" step="0.01" name="parcel_width" class="form-control" required>
            </div>

            <!-- Parcel Height -->
            <div class="mb-3">
                <label for="parcel_height" class="form-label text-white">Parcel Height:</label>
                <input type="number" id="parcel_height" step="0.01" name="parcel_height" class="form-control" required>
            </div>

            <!-- Checkbox Options -->
            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="is_fragile" name="is_fragile" value="true">
                <label class="form-check-label text-white" for="is_fragile">Fragile</label>
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="is_perishable" name="is_perishable" value="true">
                <label class="form-check-label text-white" for="is_perishable">Perishable</label>
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="is_hazardous" name="is_hazardous" value="true">
                <label class="form-check-label text-white" for="is_hazardous">Hazardous</label>
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="is_oversized" name="is_oversized" value="true">
                <label class="form-check-label text-white" for="is_oversized">Oversized</label>
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="is_returnable" name="is_returnable" value="true">
                <label class="form-check-label text-white" for="is_returnable">Returnable</label>
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="is_temperature_sensitive" name="is_temperature_sensitive" value="true">
                <label class="form-check-label text-white" for="is_temperature_sensitive">Temperature Sensitive</label>
            </div>

            <!-- Submit Button -->
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Add Parcel</button>
            </div>
        </form>
    </div>
</body>
