<a href="/orders">
    <img class="back" src="/back-button.png" alt="back" class="back-button">
</a>
<link rel="stylesheet" href="/styles.css">

<h2 class="order-title">Order Options</h2>

<div class="order-container">
    <main class="order-options">

        <!-- Update Order Status Container -->
        <div class="container update-status-container">
            <h3>Update Order Status</h3>
            <a href="/edit-order-status/<%= orders.order_id %>">
                <button class="btn update-status">Update Order Status</button>
            </a>
        </div>

        <!-- Ship Order Container -->
        <div class="container ship-order-container">
            <h3>Ship Order</h3>
            <form method="POST" action="/ship-order/<%= orders.order_id %>" class="ship-order-form">
                <input type="hidden" name="order_id" value="<%= orders.order_id %>">
                <label for="carrier_id">Select Carrier:</label>
                <select name="carrier_id" required class="carrier-select">
                    <option value="" disabled selected>Select a carrier</option>
                    <% carriers.forEach(function(carrier) { %>
                        <option value="<%= carrier.carrier_id %>"><%= carrier.carrier_name %></option>
                    <% }); %>
                </select>
                <button type="submit" class="btn ship-order">Ship Order</button>
            </form>
        </div>

    </main>
</div>
