<link rel="stylesheet" href="/styles.css">
<body>
    <h2>Manage Orders</h2>
    <a href="/add-postal-order" class="btn">Add New Postal Order</a>
    <a href="/add-product-order" class="btn">Add New Product Order</a>

    <h3>Postal Orders</h3>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Postal Order ID</th>
                <th>Order ID</th>
                <th>Parcel ID</th>
                <th>Total Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (orders.postalOrders.length > 0) { %>
                <% orders.postalOrders.forEach(order => { %>
                    <tr>
                        <td><%= order.postal_order_id %></td>
                        <td><%= order.order_id %></td>
                        <td><%= order.parcel_id %></td>
                        <td><%= order.total_price %></td>
                        <td>
                            <a href="/update-postal-order/<%= order.postal_order_id %>">Update</a> |
                            <form action="/delete-postal-order/<%= order.postal_order_id %>" method="POST" style="display:inline;">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="5">No postal orders available.</td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <h3>Product Orders</h3>
    <table class="responsive-table">
        <thead>
            <tr>
                <th>Product Order ID</th>
                <th>Order ID</th>
                <th>Product ID</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (orders.productOrders.length > 0) { %>
                <% orders.productOrders.forEach(order => { %>
                    <tr>
                        <td><%= order.product_order_id %></td>
                        <td><%= order.order_id %></td>
                        <td><%= order.product_id %></td>
                        <td><%= order.product_quantity %></td>
                        <td><%= order.product_unit_price %></td>
                        <td><%= order.total_price %></td>
                        <td>
                            <a href="/update-product-order/<%= order.product_order_id %>">Update</a> |
                            <form action="/delete-product-order/<%= order.product_order_id %>" method="POST" style="display:inline;">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="7">No product orders available.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>
