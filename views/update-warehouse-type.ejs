<link rel="stylesheet" href="/styles.css">
<body>
    <h2>Update Warehouse Type</h2>
    <form action="/update-warehouse-type/<%= warehouseType.warehouse_type_id %>" method="POST">
        <label for="warehouse_type_id">Type ID:</label>
        <input type="text" id="warehouse_type_id" name="warehouse_type_id" value="<%= warehouseType.warehouse_type_id %>" readonly><br>

        <label for="warehouse_type_name">Type Name:</label>
        <input type="text" id="warehouse_type_name" name="warehouse_type_name" value="<%= warehouseType.warehouse_type_name %>" required><br>

        <button type="submit">Update Type</button>
    </form>
</body>
</html>
