<link rel="stylesheet" href="/styles.css">
<div class="container">
    <h2>Add New Customer</h2>
<form action="/add-customer" method="POST">
    <label for="customer_first_name">First Name:</label>
    <input type="text" id="customer_first_name" name="customer_first_name" required><br>

    <label for="customer_last_name">Last Name:</label>
    <input type="text" id="customer_last_name" name="customer_last_name"><br>

    <label for="customer_email">Email:</label>
    <input type="email" id="customer_email" name="customer_email"><br>

    <label for="customer_address">Address:</label>
    <textarea id="customer_address" name="customer_address"></textarea><br>

    <button type="submit">Add Customer</button>
</form>
<a href="/customers">Back to Customer List</a>

</div>
