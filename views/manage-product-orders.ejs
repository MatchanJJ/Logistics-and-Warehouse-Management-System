<a href="/manage-orders">
    <img class="back" src="/back-button.png" alt="back">
</a>
<link rel="stylesheet" href="/styles.css">
<h2 class="text-title">Manage Product Orders</h2>
<div class="button-group">
    <a href="/add-product-order" class="btn btn-warning">Add New Product Order</a>

</div>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Product ID</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% if (productOrders && productOrders.length > 0) { %>
            <% productOrders.forEach(order => { %>
                <tr>
                    <td><%= order.order_id %></td>
                    <td><%= order.product_id %></td>
                    <td><%= order.product_quantity %></td>
                    <td><%= order.product_unit_price %></td>
                    <td><%= order.total_price %></td>
                    <td>
                        <a href="/update-product-order/<%= order.product_id %>" class="btn btn-info">Update</a> 
                        <form action="/delete-product-order/<%= order.product_id %>" method="POST" style="display:inline;">
                            <button type="submit"onclick="return confirm('Are you sure you want to remove this status?')" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="6">No product orders available.</td>
            </tr>
        <% } %>
    </tbody>
</table>
