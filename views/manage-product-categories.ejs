    <img class="back" src="/back-button.png" alt="back">
</a>
<link rel="stylesheet" href="/styles.css">
<body>
    <div class="container">
        <h2>Manage Product Categories</h2>
        <a href="/add-product-category" class="btn">Add New Product Category</a>
        <table class="responsive-table">
            <thead>
                <tr>
                    <th>Category ID</th>
                    <th>Category Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (productCategories && productCategories.length > 0) { %>
                    <% productCategories.forEach(category => { %>
                        <tr>
                            <td><%= category.product_category_id %></td>
                            <td><%= category.product_category_name %></td>
                            <td>
                                <a href="/update-product-category/<%= category.product_category_id %>"><button>Update</button></a> 
                                <form action="/delete-product-category/<%= category.product_category_id %>" method="POST" style="display:inline;">
                                    <button type="submit" onclick="return confirm('Are you sure you want to remove this product category?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="3">No product categories found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
