<link rel="stylesheet" href="/styles.css">
<body>
    <header>
        <h1>Manage Product Categories</h1>
        <a href="/add-product-category" class="btn">Add New Product Category</a>
        <table class="responsive-table">
            <thead>
                <tr>
                    <th>Category ID</th>
                    <th>Category Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (productCategories && productCategories.length > 0) { %>
                    <% productCategories.forEach(category => { %>
                        <tr>
                            <td><%= category.product_category_id %></td>
                            <td><%= category.product_category_name %></td>
                            <td>
                                <a href="/update-product-category/<%= category.product_category_id %>">Update</a> |
                                <form action="/delete-product-category/<%= category.product_category_id %>" method="POST" style="display:inline;">
                                    <button type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="3">No product categories found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </header>
</body>
</html>
