<h2>Add Shipment</h2>
<link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS file -->

<form action="/add-shipment" method="POST">
    <label for="shipment_id">Shipment ID:</label>
    <input type="text" id="shipment_id" name="shipment_id" required><br>

    <label for="order_id">Order ID:</label>
    <input type="text" id="order_id" name="order_id" required><br>

    <label for="carrier_id">Carrier ID:</label>
    <input type="text" id="carrier_id" name="carrier_id" required><br>

    <label for="shipping_service_id">Shipping Service ID:</label>
    <input type="text" id="shipping_service_id" name="shipping_service_id" required><br>

    <label for="shipping_address">Shipping Address:</label>
    <input type="text" id="shipping_address" name="shipping_address" required><br>

    <label for="shipment_date">Shipment Date:</label>
    <input type="date" id="shipment_date" name="shipment_date" required><br>

    <label for="estimated_delivery_date">Estimated Delivery Date:</label>
    <input type="date" id="estimated_delivery_date" name="estimated_delivery_date" required><br>

    <label for="shipment_status_id">Shipment Status ID:</label>
    <input type="text" id="shipment_status_id" name="shipment_status_id" required><br>

    <button type="submit">Add Shipment</button>
</form>
<a href="/shipments">Back to Shipment List</a>

