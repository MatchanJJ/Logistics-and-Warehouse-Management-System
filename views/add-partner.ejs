<a href="/manage-partner">
    <img class="back" src="/back-button.png" alt="back">
</a>
<h2>Add Logistics Partner</h2>
<div class="form-wrapper"> <!-- Container for the form -->
    <form action="/add-partner" method="POST" class="form-container">

        <!-- Carrier Name -->
        <div class="form-group">
            <label for="carrier_name">Carrier Name:</label>
            <input type="text" id="carrier_name" name="carrier_name" required>
        </div>

        <!-- Shipping Service ID -->
        <div class="form-group">
            <label for="shipping_service_id">Shipping Service:</label>
            <select id="shipping_service_id" name="shipping_service_id" required>
                <option value="">Select Shipping Service</option>
                <% shippingServices.forEach(function(service) { %>
                    <option value="<%= service.shipping_service_id %>">
                        <%= service.shipping_service_name %>
                    </option>
                <% }); %>
            </select>
        </div>

        <!-- Contact Info -->
        <div class="form-group">
            <label for="carrier_contact_info">Contact Info:</label>
            <input type="text" id="carrier_contact_info" name="carrier_contact_info" required>
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <button type="submit" class="btn">Add Partner</button>
        </div>
    </form>
</div>
