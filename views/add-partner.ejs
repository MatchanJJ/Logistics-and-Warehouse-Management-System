<a href="/manage-partner">
    <img class="back" src="/back-button.png" alt="back">
</a>


<div class="form-container"> <!-- Container for the form -->
    <h2 class="text-white">Add Logistics Partner</h2>
    <form action="/add-partner" method="POST" class="form-container">

        <!-- Carrier Name -->
        <div class="mb-3">
            <label for="carrier_name" class="form-label text-white">Carrier Name:</label>
            <input type="text" id="carrier_name" name="carrier_name" required class="form-control">
        </div>

        <!-- Shipping Service ID -->
        <div class="mb-3">
            <label for="shipping_service_id" class="form-label text-white">Shipping Service:</label>
            <select id="shipping_service_id" name="shipping_service_id" required class="form-select">
                <option value="">Select Shipping Service</option>
                <% shippingServices.forEach(function(service) { %>
                    <option value="<%= service.shipping_service_id %>">
                        <%= service.shipping_service_name %>
                    </option>
                <% }); %>
            </select>
        </div>

        <!-- Contact Info -->
        <div class="mb-3">
            <label for="carrier_contact_info" class="form-label text-white">Contact Info:</label>
            <input type="text" id="carrier_contact_info" name="carrier_contact_info" required class="form-control">
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Add Partner</button>
    </form>
</div>
