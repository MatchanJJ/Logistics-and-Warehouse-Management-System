    <img class="back" src="/back-button.png" alt="back">
</a>
<link rel="stylesheet" href="/styles.css">
<body>
    <div class="container">
        <h2>Manage Warehouse Types</h2>
        <div class="button-group">
            <a href="/add-warehouse-type" class="btn btn-warning">Add New Warehouse Type</a>

        </div>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Type ID</th>
                <th>Type Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (warehouseTypes && warehouseTypes.length > 0) { %>
                <% warehouseTypes.forEach(type => { %>
                    <tr>
                        <td><%= type.warehouse_type_id %></td>
                        <td><%= type.warehouse_type_name %></td>
                        <td>
                            <a href="/update-warehouse-type/<%= type.warehouse_type_id %>" class="btn btn-info">Update</a> 
                            <form action="/delete-warehouse-type/<%= type.warehouse_type_id %>" method="POST" style="display:inline;">
                                <button type="submit" onclick="return confirm('Are you sure you want to remove this warehouse type?')" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="3">No warehouse types found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
    </div>
</body>
</html>
