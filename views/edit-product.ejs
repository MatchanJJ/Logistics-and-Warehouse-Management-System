<a href="/edit-product-option/<%= product.product_id %>">
    <img class="back" src="/back-button.png" alt="back">
</a>

<link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS file -->

<div class="form-container">
    <h2 class="text-white">Edit Product</h2>
    <form action="/edit-product/<%= product.product_id %>" method="POST">

        <!-- Product Category ID -->
        <div class="mb-3">
            <label for="product_category_id" class="form-label text-white">Category ID:</label>
            <input type="text" id="product_category_id" name="product_category_id" class="form-control" value="<%= product.product_category_id %>" required>
        </div>

        <!-- Product Name -->
        <div class="mb-3">
            <label for="product_name" class="form-label text-white">Product Name:</label>
            <input type="text" id="product_name" name="product_name" class="form-control" value="<%= product.product_name %>" required>
        </div>

        <!-- Product Brand -->
        <div class="mb-3">
            <label for="product_brand" class="form-label text-white">Brand:</label>
            <input type="text" id="product_brand" name="product_brand" class="form-control" value="<%= product.product_brand %>">
        </div>

        <!-- Product Supplier -->
        <div class="mb-3">
            <label for="product_supplier" class="form-label text-white">Supplier:</label>
            <input type="text" id="product_supplier" name="product_supplier" class="form-control" value="<%= product.product_supplier %>">
        </div>

        <!-- Product Description -->
        <div class="mb-3">
            <label for="product_description" class="form-label text-white">Description:</label>
            <textarea id="product_description" name="product_description" class="form-control" required><%= product.product_description %></textarea>
        </div>

        <!-- Product Unit Price -->
        <div class="mb-3">
            <label for="product_unit_price" class="form-label text-white">Unit Price:</label>
            <input type="number" step="0.01" id="product_unit_price" name="product_unit_price" class="form-control" value="<%= product.product_unit_price %>" required>
        </div>

        <!-- Product Weight -->
        <div class="mb-3">
            <label for="product_weight" class="form-label text-white">Weight:</label>
            <input type="number" step="0.01" id="product_weight" name="product_weight" class="form-control" value="<%= product.product_weight %>" required>
        </div>

        <!-- Product Dimensions -->
        <div class="mb-3">
            <label for="product_length" class="form-label text-white">Length:</label>
            <input type="number" step="0.01" id="product_length" name="product_length" class="form-control" value="<%= product.product_length %>" required>
        </div>

        <div class="mb-3">
            <label for="product_width" class="form-label text-white">Width:</label>
            <input type="number" step="0.01" id="product_width" name="product_width" class="form-control" value="<%= product.product_width %>" required>
        </div>

        <div class="mb-3">
            <label for="product_height" class="form-label text-white">Height:</label>
            <input type="number" step="0.01" id="product_height" name="product_height" class="form-control" value="<%= product.product_height %>" required>
        </div>



        <!-- Checkbox Group for Product Attributes -->
        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="is_fragile" name="is_fragile" value="true" <%= product.is_fragile ? 'checked' : '' %>>
            <label class="form-check-label text-white" for="is_fragile">Fragile</label>
        </div>

        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="is_perishable" name="is_perishable" value="true" <%= product.is_perishable ? 'checked' : '' %>>
            <label class="form-check-label text-white" for="is_perishable">Perishable</label>
        </div>

        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="is_hazardous" name="is_hazardous" value="true" <%= product.is_hazardous ? 'checked' : '' %>>
            <label class="form-check-label text-white" for="is_hazardous">Hazardous</label>
        </div>

        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="is_oversized" name="is_oversized" value="true" <%= product.is_oversized ? 'checked' : '' %>>
            <label class="form-check-label text-white" for="is_oversized">Oversized</label>
        </div>

        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="is_returnable" name="is_returnable" value="true" <%= product.is_returnable ? 'checked' : '' %>>
            <label class="form-check-label text-white" for="is_returnable">Returnable</label>
        </div>

        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="is_temperature_sensitive" name="is_temperature_sensitive" value="true" <%= product.is_temperature_sensitive ? 'checked' : '' %>>
            <label class="form-check-label text-white" for="is_temperature_sensitive">Temperature Sensitive</label>
        </div>

        <!-- Submit Button -->
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Update Product</button>
        </div>
    </form>
</div>
