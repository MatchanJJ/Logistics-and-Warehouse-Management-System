<link rel="stylesheet" href="/styles.css">
<h2>Add New Postal Order</h2>
<div class="container">
    <form action="/add-postal-order" method="POST" class="form-container">
        <div class="form-group">
            <label for="postal_order_id">Postal Order ID:</label>
            <input type="text" id="postal_order_id" name="postal_order_id" required>
        </div>
    
        <div class="form-group">
            <label for="order_id">Order ID:</label>
            <input type="text" id="order_id" name="order_id" required>
        </div>
    
        <div class="form-group">
            <label for="parcel_id">Parcel ID:</label>
            <input type="text" id="parcel_id" name="parcel_id" required>
        </div>
    
        <div class="form-group">
            <label for="total_price">Total Price:</label>
            <input type="number" id="total_price" name="total_price" step="0.01" required>
        </div>
    
        <div class="form-group">
            <button type="submit">Add Postal Order</button>
        </div>
    </form>
    
    <a href="/postal-orders" class="btn">Back to Postal Orders</a>
    
</div>
