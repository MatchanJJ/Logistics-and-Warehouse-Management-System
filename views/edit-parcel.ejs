<a href="/edit-parcel-prompt/<%= parcel.parcel_id %>">
    <img class="back" src="/back-button.png" alt="back">
</a>

<link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS file -->

<!-- Use a container-like div to wrap the form -->
<div class="form-container">
    <h2 class="text-white">Edit Parcel</h2>
    <form action="/edit-parcel-option/<%= parcel.parcel_id %>" method="POST">

        <!-- Parcel Category ID -->
        <div class="mb-3">
            <label for="parcel_category_id" class="form-label text-white">Parcel Category ID:</label>
            <input type="text" id="parcel_category_id" name="parcel_category_id" class="form-control" value="<%= parcel.parcel_category_id %>" required>
        </div>

        <!-- Parcel Description -->
        <div class="mb-3">
            <label for="parcel_description" class="form-label text-white">Description:</label>
            <input type="text" id="parcel_description" name="parcel_description" class="form-control" value="<%= parcel.parcel_description %>" required>
        </div>

        <!-- Parcel Unit Price -->
        <div class="mb-3">
            <label for="parcel_unit_price" class="form-label text-white">Unit Price:</label>
            <input type="number" step="0.01" id="parcel_unit_price" name="parcel_unit_price" class="form-control" value="<%= parcel.parcel_unit_price %>" required>
        </div>

        <!-- Parcel Weight -->
        <div class="mb-3">
            <label for="parcel_weight" class="form-label text-white">Weight:</label>
            <input type="number" step="0.01" id="parcel_weight" name="parcel_weight" class="form-control" value="<%= parcel.parcel_weight %>" required>
        </div>

        <!-- Parcel Length -->
        <div class="mb-3">
            <label for="parcel_length" class="form-label text-white">Length:</label>
            <input type="number" step="0.01" id="parcel_length" name="parcel_length" class="form-control" value="<%= parcel.parcel_length %>" required>
        </div>

        <!-- Parcel Width -->
        <div class="mb-3">
            <label for="parcel_width" class="form-label text-white">Width:</label>
            <input type="number" step="0.01" id="parcel_width" name="parcel_width" class="form-control" value="<%= parcel.parcel_width %>" required>
        </div>

        <!-- Parcel Height -->
        <div class="mb-3">
            <label for="parcel_height" class="form-label text-white">Height:</label>
            <input type="number" step="0.01" id="parcel_height" name="parcel_height" class="form-control" value="<%= parcel.parcel_height %>" required>
        </div>

        <!-- Checkbox Group for Parcel Attributes -->
        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="is_fragile" name="is_fragile" value="true" <%= parcel.is_fragile ? 'checked' : '' %>>
            <label class="form-check-label text-white" for="is_fragile">Fragile</label>
        </div>
        
        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="is_perishable" name="is_perishable" value="true" <%= parcel.is_perishable ? 'checked' : '' %>>
            <label class="form-check-label text-white" for="is_perishable">Perishable</label>
        </div>
        
        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="is_hazardous" name="is_hazardous" value="true" <%= parcel.is_hazardous ? 'checked' : '' %>>
            <label class="form-check-label text-white" for="is_hazardous">Hazardous</label>
        </div>
        
        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="is_oversized" name="is_oversized" value="true" <%= parcel.is_oversized ? 'checked' : '' %>>
            <label class="form-check-label text-white" for="is_oversized">Oversized</label>
        </div>
        
        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="is_returnable" name="is_returnable" value="true" <%= parcel.is_returnable ? 'checked' : '' %>>
            <label class="form-check-label text-white" for="is_returnable">Returnable</label>
        </div>
        
        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="is_temperature_sensitive" name="is_temperature_sensitive" value="true" <%= parcel.is_temperature_sensitive ? 'checked' : '' %>>
            <label class="form-check-label text-white" for="is_temperature_sensitive">Temperature Sensitive</label>
        </div>
        
        <!-- Submit Button -->
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Update Parcel</button>
        </div>
    </form>
</div>

