<a href="/parcel">
    <img class="back" src="/back-button.png" alt="back">
</a>
<h2>Edit Parcel</h2>
<link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS file -->

<!-- Use a card or container-like div to wrap the form -->
<div class="form-wrapper">
    <form action="/edit-parcel/<%= parcel.parcel_id %>" method="POST" class="form-container">
        <!-- Parcel Category ID -->
        <div class="form-group">
            <label for="parcel_category_id">Parcel Category ID:</label>
            <input type="text" id="parcel_category_id" name="parcel_category_id" value="<%= parcel.parcel_category_id %>" required>
        </div>

        <!-- Parcel Description -->
        <div class="form-group">
            <label for="parcel_description">Description:</label>
            <input type="text" id="parcel_description" name="parcel_description" value="<%= parcel.parcel_description %>" required>
        </div>

        <!-- Parcel Unit Price -->
        <div class="form-group">
            <label for="parcel_unit_price">Unit Price:</label>
            <input type="number" step="0.01" id="parcel_unit_price" name="parcel_unit_price" value="<%= parcel.parcel_unit_price %>" required>
        </div>

        <!-- Parcel Weight -->
        <div class="form-group">
            <label for="parcel_weight">Weight:</label>
            <input type="number" step="0.01" id="parcel_weight" name="parcel_weight" value="<%= parcel.parcel_weight %>" required>
        </div>

        <!-- Parcel Length -->
        <div class="form-group">
            <label for="parcel_length">Length:</label>
            <input type="number" step="0.01" id="parcel_length" name="parcel_length" value="<%= parcel.parcel_length %>" required>
        </div>

        <!-- Parcel Width -->
        <div class="form-group">
            <label for="parcel_width">Width:</label>
            <input type="number" step="0.01" id="parcel_width" name="parcel_width" value="<%= parcel.parcel_width %>" required>
        </div>

        <!-- Parcel Height -->
        <div class="form-group">
            <label for="parcel_height">Height:</label>
            <input type="number" step="0.01" id="parcel_height" name="parcel_height" value="<%= parcel.parcel_height %>" required>
        </div>

        <!-- Checkbox Group for Parcel Attributes -->
        <div class="form-group">
            <label for="is_fragile">Fragile:</label>
            <input type="checkbox" id="is_fragile" name="is_fragile" value="true" <%= parcel.is_fragile ? 'checked' : '' %>>
        </div>
        
        <div class="form-group">
            <label for="is_perishable">Perishable:</label>
            <input type="checkbox" id="is_perishable" name="is_perishable" value="true" <%= parcel.is_perishable ? 'checked' : '' %>>
        </div>
        
        <div class="form-group">
            <label for="is_hazardous">Hazardous:</label>
            <input type="checkbox" id="is_hazardous" name="is_hazardous" value="true" <%= parcel.is_hazardous ? 'checked' : '' %>>
        </div>
        
        <div class="form-group">
            <label for="is_oversized">Oversized:</label>
            <input type="checkbox" id="is_oversized" name="is_oversized" value="true" <%= parcel.is_oversized ? 'checked' : '' %>>
        </div>
        
        <div class="form-group">
            <label for="is_returnable">Returnable:</label>
            <input type="checkbox" id="is_returnable" name="is_returnable" value="true" <%= parcel.is_returnable ? 'checked' : '' %>>
        </div>
        
        <div class="form-group">
            <label for="is_temperature_sensitive">Temperature Sensitive:</label>
            <input type="checkbox" id="is_temperature_sensitive" name="is_temperature_sensitive" value="true" <%= parcel.is_temperature_sensitive ? 'checked' : '' %>>
        </div>
        
        <!-- Submit Button -->
        <div class="form-group">
            <button type="submit" class="btn">Update Parcel</button>
        </div>
    </form>
</div>
