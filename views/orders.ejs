
        <body>
            <a href="/">
                <img class="home" src="/home-button.png" alt="home">
            </a>
        </a>
        <a href="/order-logs">
            <img class="home" src="/log.png" alt="log">
        </a>
        <a href="/order-archives">
            <img class="home" src="/inbox.png" alt="archive">
        </a>
        <div class="flexer">
            <h2 class="text-title">Orders</h2>

        </div>
                <link rel="stylesheet" href="/styles.css">
                <div class="button-group">

                    <a href="/add-orders" class="btn btn-warning">Add Order</a>
                    <a href="/manage-orders" class="btn btn-warning">Order Management</a>
                    <a href="/manage-status-and-category" class="btn btn-warning">Status and Category Management</a>
                </div>
            
                    <table class="table table-dark table-striped">
                        <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer ID</th>
                        <th>Order Timestamp</th>
                        <th>Order Status ID</th>
                        <th>Shipping Service ID</th>
                        <th>Delivery Address</th>
                        <th>Shipping Receiver</th>
                        <th>Order Total Amount</th>
                        <th>Shipping Service Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>
                        <tr onclick="window.location.href='/order-options/<%= order.order_id %>' " style="cursor: pointer;">
                            <td><%= order.order_id %></td>
                            <td><%= order.customer_id %></td>
                            <td><%= order.order_date_time %></td>
                            <td><%= order.order_status_id %></td>
                            <td><%= order.shipping_service_id %></td>
                            <td><%= order.delivery_address %></td>
                            <td><%= order.shipping_receiver %></td>
                            <td><%= order.order_total_amount %></td>
                            <td><%= order.shipping_service_name %></td>
                            <td>
                                <!-- Form for removing an order -->
                                <form method="POST" action="/remove-order/<%= order.order_id %>" style="display:inline;">
                                    <button type="submit" class="btn btn-danger">Remove</button>
                                </form>
                                <!-- Form for canceling an order -->
                                <form method="POST" action="/cancel-order/<%= order.order_id %>" style="display:inline;">
                                    <button type="submit" class="btn btn-secondary">Cancel</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </body>