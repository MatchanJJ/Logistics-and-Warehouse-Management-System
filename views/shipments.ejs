<a href="/">
    <img class="home" src="/home-button.png" alt="home">
</a>
<a href="/shipment-logs">
    <img class="home" src="/log.png" alt="log">
</a>
<a href="/shipment-archives">
    <img class="home" src="/inbox.png" alt="archives">
</a>
<div class="flexer">

    <h2 class="text-title">Shipment List</h2>
</div>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Shipment ID</th>
            <th>Order ID</th>
            <th>Carrier ID</th>
            <th>Current Location</th>
            <th>Shipping Address</th>
            <th>Shipment Date</th>
            <th>Estimated Delivery Date</th>
            <th>Shipping Service</th>
            <th>Shipment Status</th>
        </tr>
    </thead>
    <tbody>
        <% shipments.forEach(shipment => { %>
        <tr onclick="window.location.href='/shipment-actions/<%= shipment.shipment_id %>'" style="cursor: pointer;">
            <td><%= shipment.shipment_id %></td>
            <td><%= shipment.order_id %></td>
            <td><%= shipment.carrier_id %></td>
            <td><%= shipment.current_location %></td>
            <td><%= shipment.shipment_address %></td>
            <td><%= shipment.shipment_date %></td>
            <td><%= shipment.estimated_delivery_date %></td>
            <td><%= shipment.shipping_service %></td>
            <td><%= shipment.shipment_status %></td>
        </tr>
        <% }) %>
    </tbody>
</table>

<!-- Optional CSS for buttons -->
<style>
    .btn {
        display: inline-block;
        padding: 10px 15px;
        margin: 10px 5px;
        color: white;
        background-color: #007BFF; /* Bootstrap primary color */
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .btn:hover {
        background-color: #0056b3; /* Darker shade for hover effect */
    }
</style>
