<body>
    <!-- Back Button -->
    <a href="/warehouses">
        <img class="back" src="/back-button.png" alt="back">
    </a>
    <div class="form-container">

        <!-- Page Header -->
        <h1 class="text-white">Update Warehouse Capacity</h1>

        <!-- Update Capacity Form -->
        <form action="/update-warehouse-capacity/<%= warehouse.warehouse_id %>" method="POST" class="mb-3">
            <div class="mb-3">
                <label for="capacity" class="form-label text-white">New Capacity:</label>
                <input type="number" id="capacity" name="new_capacity" required class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Update Capacity</button>
        </form>

        <!-- Current Warehouse Details -->
        <h2 class="text-white">Current Warehouse Details</h2>
        <ul class="list-group list-group-flush mb-3">
            <li class="list-group-item bg-transparent text-white">Warehouse ID: <%= warehouse.warehouse_id %></li>
            <li class="list-group-item bg-transparent text-white">Address: <%= warehouse.warehouse_address %></li>
            <li class="list-group-item bg-transparent text-white">Total Capacity: <%= warehouse.total_capacity %></li>
            <li class="list-group-item bg-transparent text-white">Current Capacity Used: <%= warehouse.current_capacity_used %></li>
        </ul>
    </div>

</body>
