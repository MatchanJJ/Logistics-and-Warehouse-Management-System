   <link rel="stylesheet" href="/styles.css">
    <body>
       
        <div class="container">
            <h2>Manage Order Status</h2>
            <div class="button-group">

                <a href="/add-order-status" class="btn btn-warning">Add New Order Status</a>
            </div>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Status ID</th>
                    <th>Status Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (orderStatuses && orderStatuses.length > 0) { %>
                    <% orderStatuses.forEach(status => { %>
                        <tr>
                            <td><%= status.order_status_id %></td>
                            <td><%= status.order_status_name %></td>
                            <td>
                                <a href="/update-order-status/<%= status.order_status_id %>" class="btn btn-info">Update</a> 
                                <form action="/delete-order-status/<%= status.order_status_id %>" method="POST" style="display:inline;">
                                    <button type="submit" onclick="return confirm('Are you sure you want to remove this order status?')" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="3">No order statuses found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        </div>
        
    </body>
    </html>
