<a href="/warehouses">
    <img class="back" src="/back-button.png" alt="back">
</a>
<h2>Add Warehouse</h2>
<link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS file -->

<div class="form-wrapper">
    <form action="/add-warehouse" method="POST" class="form-container">
        <div class="form-group">
            <label for="warehouse_id">Warehouse ID:</label>
            <input type="text" id="warehouse_id" name="warehouse_id" required class="form-control">
        </div>

        <div class="form-group">
            <label for="warehouse_address">Location:</label>
            <input type="text" id="warehouse_address" name="warehouse_address" required class="form-control">
        </div>

        <div class="form-group">
            <label for="capacity">Capacity:</label>
            <input type="number" id="capacity" name="capacity" required class="form-control">
        </div>

        <div class="form-group">
            <label for="warehouse_type_id">Warehouse Type ID:</label>
            <input type="text" id="warehouse_type_id" name="warehouse_type_id" required class="form-control">
        </div>

        <div class="form-group">
            <button type="submit" class="btn">Add Warehouse</button>
        </div>
    </form>
</div>
