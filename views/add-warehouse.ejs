<!-- Back Button -->
<a href="/warehouses">
    <img class="back" src="/back-button.png" alt="back">
</a>

<div class="flexer">
    <h2 class="text-title">Add Warehouse</h2> <!-- Change heading text color to white -->
</div>

<link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS file -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"> <!-- Bootstrap CSS -->

<!-- Form Structure -->
<div class="form-wrapper">
    <form action="/add-warehouse" method="POST" class="form-container">

        <!-- Location Field -->
        <div class="mb-3">
            <label for="warehouse_address" class="form-label">Location:</label>
            <input type="text" id="warehouse_address" name="warehouse_address" required class="form-control">
        </div>

        <!-- Capacity Field -->
        <div class="mb-3">
            <label for="capacity" class="form-label">Capacity:</label>
            <input type="number" id="capacity" name="capacity" required class="form-control">
        </div>

        <!-- Warehouse Type Dropdown -->
        <div class="mb-3">
            <label for="warehouse_type_id" class="form-label">Warehouse Type:</label>
            <select id="warehouse_type_id" name="warehouse_type_id" required class="form-control">
                <option value="">Select Warehouse Type</option>
                <% warehouseTypes.forEach(function(warehouseType) { %>
                    <option value="<%= warehouseType.warehouse_type_id %>">
                        <%= warehouseType.warehouse_type_name %>
                    </option>
                <% }); %>
            </select>
        </div>

        <!-- Submit Button -->
        <div class="mb-3">
            <button type="submit" class="btn btn-info">Submit</button>
        </div>

    </form>
</div>
