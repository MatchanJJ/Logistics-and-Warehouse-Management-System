
<body>
    <a href="/employees">
        <img class="back" src="/back-button.png" alt="back">
    </a>
    <h1>Employee Archives</h1>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Archive ID</th>
                <th>Employee ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Contact Info</th>
                <th>Role ID</th>
                <th>Salary</th>
                <th>Timestamp</th>
            </tr>
        </thead>
        <tbody>
            <% employeeArchives.forEach(archive => { %>
                <tr>
                    <td><%= archive.archive_id %></td>
                    <td><%= archive.employee_id %></td>
                    <td><%= archive.employee_first_name %></td>
                    <td><%= archive.employee_last_name %></td>
                    <td><%= archive.contact_info %></td>
                    <td><%= archive.employee_role_id %></td>
                    <td><%= archive.employee_salary %></td>
                    <td><%= archive.archived_at %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
