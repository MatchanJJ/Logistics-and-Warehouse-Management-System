<h2>Shipment List</h2>

<!-- Buttons to add a new shipment -->
<div>
    <a href="/add-shipment" class="btn">Add Shipment</a>
</div>

<table>
    <thead>
        <tr>
            <th>Shipment ID</th>
            <th>Order ID</th>
            <th>Carrier ID</th>
            <th>Shipping Service ID</th>
            <th>Shipping Address</th>
            <th>Shipment Date</th>
            <th>Estimated Delivery Date</th>
            <th>Status ID</th>
            <th>Actions</th> <!-- Added actions column -->
        </tr>
    </thead>
    <tbody>
        <% shipments.forEach(shipment => { %>
        <tr>
            <td><%= shipment.shipment_id %></td>
            <td><%= shipment.order_id %></td>
            <td><%= shipment.carrier_id %></td>
            <td><%= shipment.shipping_service_id %></td>
            <td><%= shipment.shipping_address %></td>
            <td><%= shipment.shipment_date %></td>
            <td><%= shipment.estimated_delivery_date %></td>
            <td><%= shipment.shipment_status_id %></td>
            <td>
                <!-- View Button -->
                <a href="/shipment/<%= shipment.shipment_id %>" class="btn">View</a> | 
                <!-- Update Button -->
                <a href="/update-shipment/<%= shipment.shipment_id %>" class="btn">Update</a> |
                <!-- Delete Form -->
                <form action="/delete-shipment/<%= shipment.shipment_id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn" style="background-color: red;">Delete</button>
                </form>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>

<!-- Optional CSS for buttons -->
<style>
    .btn {
        display: inline-block;
        padding: 10px 15px;
        margin: 10px 5px;
        color: white;
        background-color: #007BFF; /* Bootstrap primary color */
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .btn:hover {
        background-color: #0056b3; /* Darker shade for hover effect */
    }
</style>
