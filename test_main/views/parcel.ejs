<h2>Parcel Inventory</h2>
<link rel="stylesheet" href="/styles.css">
<a href="/add-parcel" class="btn">Add New Parcel</a>
<table class="responsive-table">
    <thead>
        <tr>
            <th>Parcel ID</th>
            <th>Parcel Category ID</th>
            <th>Parcel Description</th>
            <th>Parcel Unit Price</th>
            <th>Parcel Weight</th>
            <th>Parcel Length</th>
            <th>Parcel Width</th>
            <th>Parcel Height</th>
            <th>Fragile</th>
            <th>Perishable</th>
            <th>Hazardous</th>
            <th>Oversized</th>
            <th>Returnable</th>
            <th>Temperature Sensitive</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% if (Array.isArray(parcels) && parcels.length > 0) { %>
            <% parcels.forEach(parcel => { %>
                <tr>
                    <td><%= parcel.parcel_id %></td>
                    <td><%= parcel.parcel_category_id %></td>
                    <td><%= parcel.parcel_description %></td>
                    <td><%= parcel.parcel_unit_price %></td>
                    <td><%= parcel.parcel_weight %></td>
                    <td><%= parcel.parcel_length %></td>
                    <td><%= parcel.parcel_width %></td>
                    <td><%= parcel.parcel_height %></td>
                    <td><%= parcel.is_fragile ? 'Yes' : 'No' %></td>
                    <td><%= parcel.is_perishable ? 'Yes' : 'No' %></td>
                    <td><%= parcel.is_hazardous ? 'Yes' : 'No' %></td>
                    <td><%= parcel.is_oversized ? 'Yes' : 'No' %></td>
                    <td><%= parcel.is_returnable ? 'Yes' : 'No' %></td>
                    <td><%= parcel.is_temperature_sensitive ? 'Yes' : 'No' %></td>
                    <td>
                        <a href="/edit-parcel/<%= parcel.parcel_id %>">Edit</a> |
                        <form action="/delete-parcel/<%= parcel.parcel_id %>" method="POST" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="14">No parcels available.</td>
            </tr>
        <% } %>
        
    </tbody>
</table>
