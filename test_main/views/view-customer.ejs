<title>Customer Details - <%= customer.customer_first_name %> <%= customer.customer_last_name %></title>
<link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS file -->
<body>
    <main>
        <!-- Container wrapping everything -->
        <div class="container">
            <h2>Details of <%= customer.customer_first_name %> <%= customer.customer_last_name %></h2>
            
            <table>
                <tr>
                    <th>ID:</th>
                    <td><%= customer.customer_id %></td>
                </tr>
                <tr>
                    <th>First Name:</th>
                    <td><%= customer.customer_first_name %></td>
                </tr>
                <tr>
                    <th>Last Name:</th>
                    <td><%= customer.customer_last_name %></td>
                </tr>
                <tr>
                    <th>Email:</th>
                    <td><%= customer.customer_email %></td>
                </tr>
                <tr>
                    <th>Address:</th>
                    <td><%= customer.customer_address %></td>
                </tr>
            </table>

            <!-- Action buttons for editing and going back -->
            <div class="actions">
                <a href="/update-customer/<%= customer.customer_id %>" class="btn">Edit Customer</a>
                <a href="/customers" class="btn">Back to Customer List</a>
            </div>
        </div>
    </main>
</body>
</html>
